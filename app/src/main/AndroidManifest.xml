<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/nombreapp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Taller2"
        tools:targetApi="31">

        <!-- Splash Screen -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity (Pantalla principal) -->
        <activity android:name=".MainActivity" android:exported="true"/>

        <!-- LoginActivity (Pantalla de inicio de sesi칩n) -->
        <activity android:name=".LoginActivity" android:exported="false"/>

        <!-- RegistroActivity (Pantalla de registro) -->
        <activity android:name=".RegistroActivity" android:exported="false"/>

        <!-- PerfilActivity (Pantalla de perfil del usuario) -->
        <activity android:name=".PerfilActivity" android:exported="false"/>

        <!-- RecuContraActivity (Pantalla de recuperaci칩n de contrase침a) -->
        <activity android:name=".RecuContraActivity" android:exported="false"/>

        <!-- EditPerfilActivity (Pantalla de edici칩n de perfil) -->
        <activity android:name=".EditPerfilActivity" android:exported="false"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
</manifest>


